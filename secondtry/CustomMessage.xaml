<Window x:Class="secondtry.CustomMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Повідомлення" Height="200" Width="400" WindowStartupLocation="CenterOwner" SizeToContent="WidthAndHeight">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <Image x:Name="MessageImage" Width="40" Height="40" Margin="0,0,10,40" />
            <TextBlock x:Name="MessageText" VerticalAlignment="Center" FontSize="16" Margin="5,0,0,40"/>
        </StackPanel>
        <Button Content="ОК" HorizontalAlignment="Center" Width="40"  VerticalAlignment="Bottom" Margin="0,20,0,5" Click="Button_Click" />
    </Grid>
</Window>
